@page
@model ScoringEngine.Server.Pages.Systems.EditModel

@{
    ViewData["Title"] = "Edit " + Model.CompetitionSystem.SystemIdentifier;
}

<h1>Edit @Html.DisplayFor(model => model.CompetitionSystem.SystemIdentifier)</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompetitionSystem.ID" />
            <div class="form-group">
                <label asp-for="CompetitionSystem.SystemIdentifier" class="control-label"></label>
                <input asp-for="CompetitionSystem.SystemIdentifier" class="form-control" />
                <span asp-validation-for="CompetitionSystem.SystemIdentifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionSystem.ReadmeText" class="control-label"></label>
                <textarea name="CompetitionSystem.ReadmeText">
                    @Model.CompetitionSystem.ReadmeText
                </textarea>
                <span asp-validation-for="CompetitionSystem.ReadmeText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <link rel="stylesheet" href="~/lib/simplemde/dist/simplemde.min.css" />
    <script src="~/lib/simplemde/dist/simplemde.min.js"></script>
    <script>
        new SimpleMDE();
    </script>
}
