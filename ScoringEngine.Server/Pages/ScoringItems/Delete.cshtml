@page
@using ScoringEngine.Models
@model ScoringEngine.Server.Pages.ScoringItems.DeleteModel

@{
    ViewData["Title"] = "Delete Scoring Item";
}

<h1>Delete Scoring Item</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ScoringItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScoringItem.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScoringItem.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScoringItem.Points)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScoringItem.Points)
        </dd>
        <dt class="col-sm-2">
            Scoring Item Type
        </dt>
        <dd class="col-sm-10">
            @(Model.ScoringItem.ScoringItemType == ScoringItemType.Penalty ? "Penalty" : "Task")
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ScoringItem.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="../Systems/Details" asp-route-id="@Model.ScoringItem.CompetitionSystemID">Back to List</a>
    </form>
</div>
